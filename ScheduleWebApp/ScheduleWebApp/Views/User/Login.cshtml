@model ScheduleWebApp.Models.LoginModel
@{
    ViewData["Title"] = "Sign in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <link href="@Url.Content("~/css/login.css")" rel="stylesheet" type="text/css" />
}

<div class="loginForm">
    <h5>
        Log in
    </h5>
    <div class="row">
        <div>
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Surname" class="control-label"></label>
                    <input asp-for="Surname" class="form-control" type="text" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" type="text" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group buttonContainer">
                    <input type="submit" value="Sign in" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


