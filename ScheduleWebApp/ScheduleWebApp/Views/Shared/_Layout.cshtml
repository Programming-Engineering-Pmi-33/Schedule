<!DOCTYPE html>
<html lang="en">
<head>
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ScheduleWebApp</title>
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />-->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="section-part">
        <div class="header-div">
            <ul class="header-item">
                <li>
                    <a asp-area="" asp-controller="ScheduleTable" asp-action="Schedule">Schedule</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Teacher" asp-action="Profile">Profile</a>
                </li>
                <li id="logout">
                    <a asp-controller="Teacher" asp-action="LogOut">Log out</a>
                </li>
            </ul>
        </div>
    </header>

    <main class="section-part">
        <div class="main-div">
            @RenderBody()
        </div>
    </main>
    @section scripts{

        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }

</body>
</html>
